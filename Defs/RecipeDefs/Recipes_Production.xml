<?xml version="1.0" encoding="utf-8" ?>
<RecipeDefs>

	<RecipeDef>
    <defName>MakeBarrel</defName>
    <label>make barrel</label>
    <description>Craft a barrel.</description>
    <jobString>Making barrel.</jobString>
    <soundWorking>Recipe_Machining</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <workAmount>1000</workAmount>
    <workSkillLearnFactor>0.25</workSkillLearnFactor>
    <workSpeedStat>SmithingSpeed</workSpeedStat>
    <effectWorking>Smith</effectWorking>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Steel</li>
          </thingDefs>
        </filter>
        <count>10</count>
      </li>
    </ingredients>
    <products>
      <EmptyBarrel>1</EmptyBarrel>
    </products>
	<fixedIngredientFilter>
      <thingDefs>
        <li>Steel</li>
      </thingDefs>
    </fixedIngredientFilter>
    <targetCountAdjustment>1</targetCountAdjustment>
    <workSkill>Crafting</workSkill>
  </RecipeDef>

  <RecipeDef>
    <defName>FillBarrel</defName>
    <label>Fill barrel</label>
    <description>Fill a barrel with oil.</description>
    <jobString>Filling barrel.</jobString>
    <soundWorking>Recipe_Machining</soundWorking>
    <workAmount>6666</workAmount>
    <workSpeedStat>SmeltingSpeed</workSpeedStat>
    <effectWorking>Smelt</effectWorking>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>EmptyBarrel</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <products>
      <OilBarrel>1</OilBarrel>
    </products>
	<fixedIngredientFilter>
      <thingDefs>
        <li>EmptyBarrel</li>
      </thingDefs>
    </fixedIngredientFilter>
    <targetCountAdjustment>1</targetCountAdjustment>
    <workSkill>Crafting</workSkill>
  </RecipeDef>  
  
  
</RecipeDefs>