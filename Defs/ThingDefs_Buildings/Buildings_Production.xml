<?xml version="1.0" encoding="utf-8" ?>
<Buildings>

  <ThingDef ParentName="BenchBase">
    <DefName>TableBarrel</DefName>
    <label>barrel table</label>
    <ThingClass>Building_WorkTable</ThingClass>
    <Description>A work station for assembling barrels.</Description>
    <graphicData>
      <texPath>Things/Building/Production/TableMachining</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(3.5,1.5)</drawSize>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <CostList>
      <Steel>75</Steel>
    </CostList>
    <AltitudeLayer>Waist</AltitudeLayer>
    <fillPercent>0.5</fillPercent>
    <useHitPoints>True</useHitPoints>
    <statBases>
      <WorkToMake>1500</WorkToMake>
      <MaxHitPoints>180</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <Cleanliness>-2</Cleanliness>
    </statBases>
    <Size>(3,1)</Size>
    <DesignationCategory>Production</DesignationCategory>
    <Passability>PassThroughOnly</Passability>
    <pathCost>70</pathCost>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <surfaceType>Item</surfaceType>
    <!--<recipes>
      <li>MakeBarrel</li>
    </recipes>-->
    <inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
    <comps>
      <li Class="CompProperties_AffectedByFacilities">
        <linkableFacilities>
          <li>ToolCabinet</li>
        </linkableFacilities>
      </li>
      <li Class="CompProperties_Breakdownable"/>
    </comps>
    <building>
      <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
    </building>
    <constructEffect>ConstructMetal</constructEffect>
    <researchPrerequisites><li>Barrels</li></researchPrerequisites>
		<placeWorkers>
			<li>PlaceWorker_ShowFacilitiesConnections</li>
		</placeWorkers>
  </ThingDef>


  <ThingDef ParentName="BuildingBase">
    <defName>Pumpjack</defName>
    <label>Pumpjack</label>
    <thingClass>BlackGold.Building_Pumpjack</thingClass>
    <graphicData>
      <texPath>Things/Building/Production/Pumpjack</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(6,6)</drawSize>
      <damageData>
        <rect>(0.3,0,5.4,6)</rect>
      </damageData>
    </graphicData>
    <altitudeLayer>BuildingTall</altitudeLayer>
    <passability>Impassable</passability>
    <castEdgeShadows>true</castEdgeShadows>
    <fillPercent>1</fillPercent>
    <blockLight>false</blockLight>
    <statBases>
      <MaxHitPoints>500</MaxHitPoints>
      <WorkToMake>6000</WorkToMake>
      <Flammability>1.0</Flammability>
      <Beauty>-40</Beauty>
    </statBases>
    <tickerType>Normal</tickerType>
    <description>Produces oil from oil gushers. Must be placed on an oil gusher.</description>
    <size>(6,6)</size>
    <DesignationCategory>Production</DesignationCategory>
    <costList>
      <Steel>400</Steel>
      <Components>2</Components>
    </costList>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-3)</interactionCellOffset>
    <surfaceType>Item</surfaceType>
    <recipes>
      <li>FillBarrel</li>
    </recipes>
    <inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
    <rotatable>false</rotatable>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <designationCategory>Production</designationCategory>
    <Passability>PassThroughOnly</Passability>
    <staticSunShadowHeight>1.0</staticSunShadowHeight>
    <placeWorkers>
      <li>BlackGold.PlaceWorker_OnOilGusher</li>
    </placeWorkers>
    <building>
      <soundAmbient>GeothermalPlant_Ambience</soundAmbient>
      <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
      <ignoreNeedsPower>true</ignoreNeedsPower>
    </building>
    <constructEffect>ConstructMetal</constructEffect>
    <!--<designationHotkey>G</designationHotkey>-->
    <researchPrerequisites><li>Pumpjack</li></researchPrerequisites>
  </ThingDef>
 
</Buildings>